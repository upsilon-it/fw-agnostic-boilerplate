{
  "extends": ["@exeto/eslint-config/node", "prettier"],
  "plugins": ["prettier", "class-property"],
  "env": {
    "node": true,
  },
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": "error"
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "overrides": [
     {
       "files": ["src/**/*.js"],
       "parserOptions": {
          "ecmaVersion": 6,
          "sourceType": "module",
        }
     }
  ]
}
